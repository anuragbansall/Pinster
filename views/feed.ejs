<%- include('./partials/header.ejs') %>
<main>
  <div class="container mx-auto p-10">
    <h1 class="text-4xl font-semibold">Feed</h1>
    <div
      class="mt-4 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4"
    >
      <% posts.forEach(post => { %>
      <div class="post mb-4">
        <div
          class="image-container aspect-[1/1.5] bg-zinc-100 rounded-md overflow-hidden cursor-pointer"
        >
          <img
            src="<%= post.image %>"
            alt="<%= post.title %>"
            class="object-cover w-full h-full hover:scale-105 transition-transform duration-200"
          />
        </div>
        <h2 class="text-2xl font-semibold my-1"><%= post.title %></h2>
        <h3 class="text-zinc-700 line-clamp-1">@<%= post.user.username %></h3>
      </div>
      <% }) %>
    </div>
  </div>
</main>
<%- include('./partials/footer.ejs') %>
